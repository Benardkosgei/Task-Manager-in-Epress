  <h1>Dashboard</h1>
  <div class="d-flex float-right">
  <a href="/tasks/create" class="btn btn-success mr-4">Create Task</a>
  <a href="/logout" class="btn btn-danger">Log out</a>
  </div>
  <h2 class="mb-4">View All Tasks and Update Tasks</h2>
<ul class="list-group">
  {{#each tasks}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-1">{{this.title}}</h5>
        <p class="mb-1">{{this.description}}</p>
        <small>Status: {{this.status}}</small>
      </div>
      <div>
        <a href="/tasks/edit/{{this._id}}" class="btn btn-primary btn-sm mr-2">Edit</a>
        <a href="/tasks/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
      </div>
    </li>
  {{/each}}
</ul>