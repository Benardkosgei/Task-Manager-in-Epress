 <h1 class="mb-4">All Tasks</h1>
<ul class="list-group">
  {{#each tasks}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-1">{{this.title}}</h5>
        <p class="mb-1">{{this.description}}</p>
        <small>Status: {{this.status}}</small>
      </div>
    </li>
  {{/each}}
</ul>
